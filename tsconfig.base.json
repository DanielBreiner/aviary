{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "target": "es6",
        "module": "node16",
        "moduleResolution": "node16",
        "moduleDetection": "force",
        "composite": true,
        "skipLibCheck": true,
        "rootDir": "${configDir}/src",
        "outDir": "${configDir}/dist",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "jsx": "react",
    },
    "include": [
        "${configDir}/src/**/*.ts"
    ],
}